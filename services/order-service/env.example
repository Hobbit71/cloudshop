# Application
DEBUG=false
APP_NAME=Order Service
APP_VERSION=1.0.0

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/cloudshop_orders
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# API
API_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Auth
AUTH_SERVICE_URL=http://localhost:4000
JWT_SECRET=your-secret-key-here

# External Services
PRODUCT_SERVICE_URL=http://localhost:8080
PAYMENT_SERVICE_URL=http://localhost:8081
NOTIFICATION_SERVICE_URL=http://localhost:5000

# Shipping
SHIPPING_BASE_RATE=5.99
SHIPPING_FREE_THRESHOLD=50.00

# Tax
TAX_RATE=0.08

# Feature Flags
ENABLE_NOTIFICATIONS=true
ENABLE_SHIPPING_CALCULATION=true

# Logging
LOG_LEVEL=INFO

