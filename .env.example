# CloudShop environment variables (example)
# Copy to .env and adjust for your environment.

# App
APP_NAME=cloudshop
APP_ENV=development
LOG_LEVEL=info
PORT=3000
JWT_SECRET=change-me-in-dev

# PostgreSQL
POSTGRES_USER=cloudshop
POSTGRES_PASSWORD=cloudshop
POSTGRES_DB=cloudshop
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgres://cloudshop:cloudshop@localhost:5432/cloudshop

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# Elasticsearch
ELASTIC_HOST=localhost
ELASTIC_PORT=9200
ELASTICSEARCH_URL=http://localhost:9200

# Payment gateway (WireMock in local)
PAYMENT_GATEWAY_URL=http://localhost:8080
PAYMENT_GATEWAY_TIMEOUT_MS=5000

# Service defaults (used by multiple services; override in service .env if needed)
REQUEST_TIMEOUT_MS=10000
ENABLE_METRICS=true
ENABLE_TRACING=false

# Docker/compose
DOCKER_BUILDKIT=1
COMPOSE_PROJECT_NAME=cloudshop

# Uncomment to force architecture if needed (Apple Silicon)
# DOCKER_DEFAULT_PLATFORM=linux/amd64
